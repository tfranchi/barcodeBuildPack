#!/usr/bin/env bash
echo "-----> Installing bardecoder"
# change to the the BUILD_DIR ($1)
cd $1
# download the binary (-O) silently (-s)
curl https://github.com/tfranchi/bardecoder/archive/master.zip -s -O -ssl3
# make a directory to untar (like unzip) the binary
mkdir -p vendor/bar
# untar the binary to the directory we want
unzip bardecoder-muster.zip -d vendor/bar
