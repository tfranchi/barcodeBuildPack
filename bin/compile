#!/usr/bin/env bash
echo "-----> Installing bardecoder"
# change to the the BUILD_DIR ($1)
cd $1
# download the binary
wget https://github.com/tfranchi/bardecoder/archive/master.zip
# make a directory to unzip the binary
mkdir -p vendor
# unzip the binary to the directory we want
unzip master.zip -d vendor
rm master.zip
unzip scanbarcode.zip -d vendor/bardecoder-master/java
rm scanbarcode.zip
chmod 777 vendor/bardecoder-master/java/scanbarcode.jar
mkdir vendor/tmp
mkdir -p .heroku/vendor
cp -avr vendor/bardecoder-master/build/ubuntu_12.10_x86_64/* .heroku/vendor
