#!/usr/bin/env bash
echo "-----> Installing bardecoder"
# change to the the BUILD_DIR ($1)
cd $1
# download the binary (-O) silently (-s)
wget https://github.com/tfranchi/bardecoder/archive/master.zip
# make a directory to untar (like unzip) the binary
mkdir -p vendor
# untar the binary to the directory we want
unzip master.zip -d vendor
rm master.zip
unzip scanbarcode.zip -d vendor/java
rm scanbarcode.zip
chmod 777 vendor/java/scanbarcode.jar
mkdir vendor/tmp
